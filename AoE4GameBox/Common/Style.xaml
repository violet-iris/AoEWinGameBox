<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- 定义一个通用的Label样式 -->
    <Style x:Key="textblock-info" TargetType="TextBlock">
        <Setter Property="Margin" Value="8"></Setter>
        <Setter Property="Padding" Value="8"></Setter>
        <Setter Property="HorizontalAlignment" Value="Left"></Setter>
        <Setter Property="VerticalAlignment" Value="Center"></Setter>
    </Style>
    <Style x:Key="my-button-normal" TargetType="Button">
        <Setter Property="Margin" Value="8"></Setter>
        <Setter Property="Width" Value="125"></Setter>
        <Setter Property="Height" Value="25"></Setter>
        <Setter Property="HorizontalAlignment" Value="Left"></Setter>
        <Setter Property="VerticalAlignment" Value="Center"></Setter>
    </Style>
    <Style x:Key="textbox-id" TargetType="TextBox">
        <Setter Property="Width" Value="230"></Setter>
        <Setter Property="Margin" Value="8"></Setter>
        <Setter Property="Padding" Value="5"></Setter>
        <Setter Property="HorizontalAlignment" Value="Left"></Setter>
        <Setter Property="VerticalAlignment" Value="Center"></Setter>
    </Style>
</ResourceDictionary>